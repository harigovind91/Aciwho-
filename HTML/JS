<script>
    // यहाँ आप अपनी Firebase Config डालेंगे (Proper Working के लिए)
    const firebaseConfig = {
        apiKey: "YOUR_API_KEY",
        authDomain: "aciwho-foundation.firebaseapp.com",
        projectId: "aciwho-foundation",
    };
    // Initialize Firebase
    // firebase.initializeApp(firebaseConfig);

    // ईमेल साइनअप फंक्शन
    function emailSignUp() {
        const email = document.getElementById('email').value;
        const pass = document.getElementById('password').value;
        // Logic: firebase.auth().createUserWithEmailAndPassword(email, pass)...
        alert("ईमेल और पासवर्ड सेट हो गया है!");
    }

    // OTP भेजने का फंक्शन
    function sendOTP() {
        document.getElementById('otp').style.display = 'block';
        document.getElementById('verifyBtn').style.display = 'block';
        alert("OTP आपके मोबाइल और ईमेल पर भेज दिया गया है!");
    }
</script>

